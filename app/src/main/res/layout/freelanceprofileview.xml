<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.myapp.warest.ViewStudentProfile"
    android:adjustViewBounds="true">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1">


    <TextView
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@android:color/black"
            />




        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:entries="@array/Gender"
            android:spinnerMode="dropdown">

        </TextView>


        <TextView
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Date of Birth"
            android:maxLines="1"
            android:onClick="showDatePickerDialog"
            android:textColor="@android:color/black"
             />


        <TextView
            android:id="@+id/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Primary Email id"
            android:textColor="@android:color/black" />





        <TextView
            android:id="@+id/secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Secondary Email id"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/primarymob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Primary Mobile No"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/secondarymob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Secondary Mobile No"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 1"
            android:lines="6"
            android:minLines="6"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 2"
            android:lines="6"
            android:minLines="6"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="@string/Country"
            android:maxLines="1"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="@string/State"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="@string/City"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Pincode"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Enter your Skills"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Educational Details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Qualification"
            android:id="@+id/qualifications"
            android:textStyle="bold"
            android:textColor="@android:color/black" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Degree"
            android:id="@+id/degree"
            android:textStyle="bold"
            android:textColor="@android:color/black" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Field of Study"
            android:id="@+id/fieldofstudy"
            android:textStyle="bold"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/institute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Institute Name"
            android:maxLines="1"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Year of Completion"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/awards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Awards and Recognitions"
            android:lines="4"
            android:minLines="4"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Professional Details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary" />
        <TextView
            android:id="@+id/freelancecategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Freelancer Category"
            android:maxLines="1"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/shortdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Short Description Of Yourself"
            android:lines="4"
            android:minLines="4"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Profession"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/foreignlanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Foreign Language Skills"
            android:lines="4"
            android:minLines="4"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/additionalskills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional Skills"
            android:lines="4"
            android:minLines="4"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/fixedfee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Fixed Fee in INR "
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/maxdistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:entries="@array/MaxDistance"
            android:spinnerMode="dropdown">

        </TextView>

        <TextView
            android:id="@+id/days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:entries="@array/Daystrain"
            android:spinnerMode="dropdown">

        </TextView>




    </LinearLayout>



</ScrollView>

