<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.myapp.warest.UpdateFreelancerProfile"
    android:adjustViewBounds="true">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1">


        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@android:color/black"
            />




        <Spinner
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:entries="@array/Gender"
            android:spinnerMode="dropdown">

        </Spinner>


        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Date of Birth"
            android:maxLines="1"
            android:onClick="showDatePickerDialog"
            android:textColor="@android:color/black"
            tools:ignore="OnClick" />


        <EditText
            android:id="@+id/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Primary Email id"
            android:textColor="@android:color/black" />





        <EditText
            android:id="@+id/secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Secondary Email id"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/primarymob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Primary Mobile No"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/secondarymob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Secondary Mobile No"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 1"
            android:lines="6"
            android:minLines="6"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:textColor="@android:color/black" />


        <EditText
            android:id="@+id/address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Line 2"
            android:lines="6"
            android:minLines="6"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="@string/Country"
            android:maxLines="1"
            android:textColor="@android:color/black" />


        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="@string/State"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="@string/City"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Pincode"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />
        <EditText
            android:id="@+id/skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Enter your Skills"
            android:maxLines="1"
            android:textColor="@android:color/black" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Qualification"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
        <Spinner
            android:id="@+id/qualifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:entries="@array/Qualification"
            android:spinnerMode="dropdown">

        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Degree"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
        <Spinner
            android:id="@+id/degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:entries="@array/Degree"
            android:spinnerMode="dropdown">

        </Spinner>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Field of Study"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
        <Spinner
            android:id="@+id/fieldofstudy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:entries="@array/Field"
            android:spinnerMode="dropdown">

        </Spinner>

        <EditText
            android:id="@+id/institute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Institute Name"
            android:maxLines="1"
            android:textColor="@android:color/white" />
        <EditText
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:hint="Year of Completion"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/awards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Awards and Recognitions"
            android:lines="4"
            android:minLines="4"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:textColor="@android:color/black" />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@color/colorPrimary"
                android:text="Update"
                android:layout_marginTop="16dp"/>


        </LinearLayout>



    </LinearLayout>



</ScrollView>

